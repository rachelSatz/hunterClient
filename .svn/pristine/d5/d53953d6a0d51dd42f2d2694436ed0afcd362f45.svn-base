.data-table-actions {
  margin-bottom: 20px;
}

.data-table-action {
  padding: 8px 12px;
  background: #356cb3;
  border: 1px solid #356cb3;
  border-radius: 6px;
  font-size: 16px;
  color: #fff !important;
  text-decoration: none;
  cursor: pointer;
}

.data-table-actions ::ng-deep .mat-form-field {
  width: 270px;
}

.saved-message > i {
    font-size: 22px;
}

.saved-message > span {
    vertical-align: top;
}

.check-all-container {
  padding-top: 20px;
}

.data-table th {
  vertical-align: middle;
  text-align: center !important;
}

.headers th {
  font-weight: bold;
  cursor: pointer;
}

.headers th > i {
  margin-top: 4px;
}

.search-input-container > * {
  font-size: 12px;
}

.search-select-container {
  padding-top: 0;
  padding-bottom: 0;
}

.data-table tr.checked {
  background-color: #356cb3;
}

.data-table tr.checked * {
  color: #fff;
}

.data-table tr:nth-child(even) {
  background-color: #fff;
}

.data-table td {
  padding: 0.5rem;
  border: 1px solid #ddd;
  text-align: center !important;
  font-size: 14px;
}

.data-table td .badge {
    padding: 8px;
}

.data-table .row-actions {
  width: 150px;
}

.data-table .row-actions > a {
  text-decoration: none;
}

.data-table .row-actions i, .data-table .row-icon {
  margin-left: 4px;
  cursor: pointer;
  color: #356cb3;
  font-size: 18px;
}

.data-table ::ng-deep .search-input-container {
  width: 200px;
}
